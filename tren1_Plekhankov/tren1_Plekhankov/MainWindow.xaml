<Window x:Class="tren1_Plekhankov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tren1_Plekhankov"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Background="#FEA9AB">
            <TextBlock Text="Черновик" Style="{StaticResource zag}"/>
            <Image Source="Resources/logo.png" Style="{StaticResource img}"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="MaterialsBtn" Content="Материалы" Style="{StaticResource btn}" Click="MaterialsBtn_Click"/>
            <Button Name="Postbtn" Content="Поставщики" Style="{StaticResource btn}" Click="Postbtn_Click"/>
        </StackPanel>

        <Grid Grid.Row="2" Background="#EAB14D"></Grid>
        
        
    </Grid>
</Window>
